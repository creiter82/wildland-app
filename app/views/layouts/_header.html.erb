<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" 
                          data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to(image_tag("AFR_Logo_Small.png", height: '100'), root_url, 
                                                class: "pull-left logo") %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if current_personnel %>
          <li><%= link_to "Personnel", personnels_path  %></li>
          <li><%= link_to "Roster", rosters_path  %></li>
        <% end %>  
        <% if current_personnel && current_personnel.admin? %>
          <li><%= link_to "Qualifications", qualifications_path  %></li>
          <li><%= link_to "Apparatus", apparatus_path %></li>
        <% end %>  
      </ul>
      
      <% if current_personnel %>
      <ul class="nav logout navbar-right navbar-btn">
        <li>
            <%= link_to "logout", destroy_personnel_session_path, 
                                  method: :delete,
                                  class: "btn btn-xs btn-danger" %>
        </li>
      </ul>
      <ul class="nav user-name navbar-right navbar-btn">
        <li>
          <i class="fa fa-user"></i>
          <%= current_personnel.full_name.present? ? current_personnel.full_name.titleize : current_personnel.email %>
        </li>
      </ul>
      <% else %>
      <ul class="nav navbar-right navbar-btn">
        <li>
            <%= link_to "Sign Up", new_personnel_registration_path %>
        </li>
      </ul>
      <ul class="nav login navbar-right navbar-btn">
        <li>
            <%= link_to "Log In", new_personnel_session_path,
                                  class: "btn btn-xs btn-primary" %>
        </li>
      </ul>
      <% end %>
      
    </div>
  </div>
</div>